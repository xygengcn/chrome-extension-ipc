{
  "compilerOptions": {
    "target": "esNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["./**/*.ts", "content-script/**/*.ts", "devtools-page/*.ts", "panel/**/*.ts", "preload/**/*.ts", "service-worker/**/*.ts", "typings/global.d.ts", "rollup.config.js", "rollup.config.js"]
}
